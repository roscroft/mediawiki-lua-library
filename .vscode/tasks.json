    "inputs": [
        {
            "id": "moduleName",
            "type": "promptString",
            "description": "Enter the module name (without .lua extension)"
        },
        {
            "id": "docStyle",
            "type": "pickString",
            "description": "Select documentation style",
            "options": [
                {
                    "label": "Refactored (Modular)",
                    "value": "refactored"
                },
                {
                    "label": "Elegant (Clean)",
                    "value": "elegant"
                },
                {
                    "label": "Functional (Core)",
                    "value": "functional"
                },
                {
                    "label": "Ultimate (Advanced)",
                    "value": "ultimate"
                }
            ],
            "default": "refactored"
        },
        {
            "id": "demoType",
            "type": "pickString",
            "description": "Select demo type",
            "options": [
                {
                    "label": "Dependency Simplification",
                    "value": "simplified"
                },
                {
                    "label": "Functional Elegance",
                    "value": "elegance"
                },
                {
                    "label": "Helper Module Enhancements",
                    "value": "helper"
                },
                {
                    "label": "Safe Helper Usage",
                    "value": "safe"
                },
                {
                    "label": "Ultimate Functional Mastery",
                    "value": "mastery"
                }
            ],
            "default": "simplified"
        },
        {
            "id": "testSuite",
            "type": "pickString",
            "description": "Select test suite",
            "options": [
                {
                    "label": "Core Functional Patterns",
                    "value": "core"
                },
                {
                    "label": "Functional Patterns Validation",
                    "value": "patterns"
                },
                {
                    "label": "Module Integration Tests",
                    "value": "integration"
                },
                {
                    "label": "Dependencies Simplification",
                    "value": "dependencies"
                },
                {
                    "label": "All Test Suites",
                    "value": "all"
                }
            ],
            "default": "core"
        }
